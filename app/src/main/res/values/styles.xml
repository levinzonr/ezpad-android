<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAppearance">@style/TextStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    </style>


    <style name="TextStyle">
        <item name="android:textColor">#99000000</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalTheme</item>
    </style>

    <style name="ModalTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog</item>
    </style>

    <style name="TextStyle.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
    </style>


    <style name="TextStyle.Preference">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">@dimen/space_big</item>
        <item name="android:textSize">21sp</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right_black_24dp</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomMenuButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/colorAccent</item>
        <item name="iconPadding">@dimen/space_big</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/space_big</item>
    </style>
</resources>
