<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notebookOpenShared"
        app:icon="@drawable/ic_round_open_in_browser_24px"
        android:text="Open Shared Notebook"
        style="@style/Button.TextMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/notebookPublishBtn"
        app:icon="@drawable/ic_round_publish_24px"
        android:text="Publish"
        style="@style/Button.TextMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/notebookShareBtn"
        app:icon="@drawable/ic_round_share_24px"
        android:text="Share"
        style="@style/Button.TextMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notebookEditBtn"
        app:icon="@drawable/ic_edit"
        android:text="Edit"
        style="@style/Button.TextMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/notebookDeleteBtn"
        app:icon="@drawable/ic_outline_delete_24px"
        android:text="Delete"
        style="@style/Button.TextMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />






</LinearLayout>