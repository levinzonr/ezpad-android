<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="@dimen/space_normal"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginStart="@dimen/space_normal"
            android:text="More Information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="@dimen/space_large"
            android:textStyle="bold"
            style="@style/TextStyle"
            android:text="Description"
            android:layout_marginEnd="@dimen/space_large"
            android:layout_marginStart="@dimen/space_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/notebookDescriptionTv"
            android:layout_marginEnd="@dimen/space_large"
            android:layout_marginStart="@dimen/space_large"
            tools:text="Sed posuere consectetur est at lobortis. Etiam porta sem malesuada magna mollis euismod. Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/space_large"
            android:layout_marginStart="@dimen/space_large"
            android:text="Attached tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.google.android.material.chip.ChipGroup
            app:chipSpacing="@dimen/space_small"
            android:id="@+id/notebookTagsCg"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_marginStart="@dimen/space_large"
            android:layout_marginEnd="@dimen/space_large"
            android:layout_marginBottom="@dimen/space_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.chip.ChipGroup>





    </LinearLayout>


</com.google.android.material.card.MaterialCardView>